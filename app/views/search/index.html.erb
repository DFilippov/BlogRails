<h1>Found articles and comments</h1>
<p>Search query: <%= params[:search_query] %></p>

<p>
        <%= button_to "Create new article", new_article_path, method: :get, class: 'btn btn-primary', id: 'createArticleButton' %>
        <% unless current_user %>
        <p style="color: #a23023">Sign in to post articles</p>
        <script type="text/javascript"> document.getElementById('createArticleButton').disabled = true </script>
<% end %>
<br>
</p>

<% @found_articles.each do |article| %>

        <div class="shadow p-3 mb-4 bg-info rounded">

                <div class="container">
                        <div class="row">

                                <div class="col col-xs-8">
                                        <strong class="mr-auto"><%= article.title %></strong>
                                </div>

                                <% if current_user && current_user.id == article.user_id %>
                                        <div class="col-xs-2" align="center">

                                                <div class="btn-group align-content-center">
                                                        <button class="btn btn-primary btn-sm dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                                Actions
                                                        </button>

                                                        <div class="dropdown-menu bg-dark btn-sm shadow" aria-labelledby="dropdownMenuButton">
                                                                <div class="container ">
                                                                        <!-- <a class="dropdown-item"><%#= link_to 'Show', article_path(article) %></a>-->

                                                                        <a class="dropdown-item"><%= link_to 'Edit', edit_article_path(article) %></a>
                                                                        <a class="dropdown-item">
                                                                <span style="color: #af2927">
                                                                        <%= link_to 'Delete', article_path(article), method: :delete, data: { confirm: 'Are you sure you want to delete this?' }, style: "color: #af2927" %>
                                                                </span>
                                                                        </a>
                                                                </div>
                                                        </div>

                                                </div>
                                        </div>
                                <% end %>
                        </div>


                        <div class="container">
<!--                                <br>-->
                                <hr>
                                <label><%= article.text %></label>
                                <hr>
<!--                                <br>-->
                                <div class="row">
                                        <div class="col">
                                                <i style="font-size: 14px; color: #666666">Created at:  <%= article.created_at %></i>
                                        </div>

                                        <div class="col-xs-2">
                                                <% if article.comments.empty? %>
                                                        <i class="form-group">No comments</i>
                                                <% else %>
                                                        <button class="btn btn-sm btn-primary" type="button" data-toggle="collapse" data-target="#collapseExample<%= article.id %>" aria-expanded="false" aria-controls="collapseExample">
                                                                Comments: (<%= article.comments.size %>)
                                                        </button>
                                                <% end %>
                                        </div>

                                        <div class="col-xs-2">
                                                <% if current_user %>
                                                        <%= button_to 'Leave comment', article_path(article.id), class: 'btn btn-sm btn-primary ml-3', method: :get %>
                                                <% else %>
                                                        <i class="form-group ml-3" style="color: #a23023">Sign in to
                                                                leave comment</i>
                                                <% end %>
                                        </div>
                                </div>

                                <div class="collapse" id="collapseExample<%= article.id %>">
                                        <div class="card card-body" style="background-color: #dce6de">
                                                <% article.comments.each do |comment| %>

                                                        <div class="shadow p-2 mb-3 rounded" style="width: fit-content; background-color: #9bc4f2">

                                                                <label style="font-size: small">Commenter: <%= comment.author %></label><br>
                                                                <label style="font-size: small">Comment: <%= comment.body %></label><br>
                                                                <label style="font-size: 12px; color: #666666"> Created
                                                                        at:  <%= comment.created_at %></label>

                                                        </div>

                                                <% end %>
                                        </div>
                                </div>

                        </div>

                </div>
        </div>


<% end %>



