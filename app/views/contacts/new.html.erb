<H1>Contacts</H1>

<%= form_for :contacts, url: '/contacts' do |f| %>
        <% if @contact && @contact.errors.any? %>
        <p>
                <ul>
                        <% @contact.errors.full_messages.each do |message| %>
                                <li>
                                        <%= message %>
                                </li>
                        <% end %>
                </ul>
        </p>
        <% end %>

	<%= f.label :email %><br>
	<%= f.text_field :email %><br>
<br>
	<%= f.label :message %><br>
	<%= f.text_area :message %><br>

	<%= f.submit 'Send message'%>
<% end %>
